# General settings
PORT=10000
LOG_LEVEL=INFO
REQUEST_TIMEOUT_SECONDS=10
API_BASE_URL=http://localhost:10000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_GENERATE_GRAPH=1

# Authorized chat ID (optional - if set, bot will use stored credentials for /get command)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_PESU_USERNAME=your_srn_here
TELEGRAM_PESU_PASSWORD=your_password_here

# Backend toggles
# ENABLE_BACKEND_WEB controls whether frontend static files are mounted and served.
# Set to "false" to disable serving frontend/web (default true)
ENABLE_BACKEND_WEB=true

# ENABLE_BACKEND_TELEGRAM controls whether tg_bot.py is launched as a subprocess.
# Set to "true" to run the telegram bot alongside the API (default false)
ENABLE_BACKEND_TELEGRAM=false

